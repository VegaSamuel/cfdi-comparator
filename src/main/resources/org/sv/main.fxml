<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="350" prefWidth="700" spacing="20" styleClass="root" stylesheets="@style.css"
      xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12"
      fx:controller="org.sv.controllers.MainController">

    <HBox alignment="CENTER" spacing="20">
        <VBox fx:id="leftPanel" alignment="CENTER" prefHeight="400" prefWidth="300" spacing="20" styleClass="drop-zone">

            <Label fx:id="leftLabel" text="Cargar factura del SAT aquí"/>

        </VBox>

        <VBox fx:id="rightPanel" alignment="CENTER" prefHeight="400" prefWidth="300" spacing="10"
              styleClass="drop-zone">

            <Label fx:id="rightLabel" text="Cargar factura de Excelencia Hoy aquí"/>

        </VBox>
    </HBox>

    <Button onAction="#onCompare" prefWidth="200" styleClass="action-button" text="Comparar"/>

</VBox>